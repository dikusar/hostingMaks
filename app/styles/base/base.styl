
body
	height 100vh

.main
	height 100%

	&__content
		width 940px
		margin 0 auto
		overflow hidden
		min-height 100%
		height auto !important

	&__heading
		position relative
		width 98.5%
		padding-top 17px
		padding-bottom 21px
		margin-left 7px
		font-family font-georgia
		font-size 24px
		font-weight bold
		color black
		text-align center
		border-bottom 1px solid white_smoke

		&-shadow
			position absolute
			left 93px
			bottom -4px
			display block
			height 3px
			width 83%
			background-image url('data:image/svg+xml;base64,')
			background-image radial-gradient(ellipse at center, rgba(238,238,238,1) 0%,rgba(255,255,255,0) 100%)

	&__section_type_lead
		position relative
		overflow hidden

	&__section_type_footer
		position relative
		padding-top 18px

.border
	display block
	position absolute
	top -19px
	width 99.3%
	height 1px
	left 7px
	background-color white_smoke

.shadow
	position absolute
	display block
	top -18px
	left 93px
	width 83%
	height 3px
	background-image url('data:image/svg+xml;base64,')
	background-image radial-gradient(ellipse at center, rgba(238,238,238,1) 0%,rgba(255,255,255,0) 100%)


