.main
	overflow hidden

	&__content
		width 940px
		margin 0 auto

	&__heading
		position relative
		padding-top 17px
		padding-bottom 21px
		font-family font-georgia
		font-size 24px
		font-weight bold
		color black
		text-align center
		border-bottom 1px solid white_smoke

		&:after
			position absolute
			left 93px
			bottom -4px
			content ""
			display block
			height 3px
			width 83%
			margin 0 auto
			background-image url('data:image/svg+xml;base64,')
			background-image radial-gradient(ellipse at center, rgba(238,238,238,1) 0%,rgba(255,255,255,0) 100%)
