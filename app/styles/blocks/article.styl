.article
	width 300px
	margin-right 20px
	padding-bottom 58px
	float left

	&:last-of-type
		margin-right 0

	&__header
		display block
		padding-top 37px
		padding-bottom 20px
		padding-left 5px

	&__link
		font-family font-georgia
		font-size 21px
		color blue_article
		text-decoration none

		&-img
			position relative
			display block
			height 192px
			border 1px solid white_border
			border-radius 5px

			&-shadow
			&-shadow_bottom
				position absolute
				left 5%
				height 3px
				display block
				width 83%
				background-image url('data:image/svg+xml;base64,')
				background-image radial-gradient(ellipse at center, rgba(186,186,186,1) 0%,rgba(255,255,255,0) 71%)

			&-shadow
				top -3.5px

			&-shadow_bottom
				bottom -4px


	&__descript
		font-family font-helvetica
		font-size 12px
		color grey_article

	&__img
		width 100%
		height 100%
		border 6px solid white_bold_border
		border-radius 5px

	&__text
		padding-top 15px
		padding-bottom 20px
		padding-left 7px
		font-family font-helvetica
		font-size 13px
		color black_article
		line-height 19px


