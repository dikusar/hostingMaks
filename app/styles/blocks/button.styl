.button
	position relative
	width 163px
	height 32px
	text-align left
	border 1px solid grey_border_button
	border-radius 3px

	&__shadow
	&__shadow_bottom
		position absolute
		left 2%
		height 2px
		display block
		width 56%
		background-image url('data:image/svg+xml;base64,')
		background-image radial-gradient(ellipse at center, rgba(186,186,186,1) 0%,rgba(255,255,255,0) 71%)

	&__shadow
		top -2px

	&__shadow_bottom
		bottom -2px

	&_theme_silver
		margin-left 7px
		background-image url('data:image/svg+xml;base64,')
		background-image linear-gradient(to right,  rgba(232,232,232,1) 0%,rgba(255,255,255,1) 36%,rgba(237,237,237,1) 100%)

	&_theme_blue
		padding-top .765em
		padding-bottom .765em
		padding-left 12px
		font-family font-helvetica
		font-size 12px
		color white
		background-image url('data:image/svg+xml;base64,')
		background-image linear-gradient(to bottom, rgba(79,131,188,1) 0%,rgba(75,132,189,1) 49%,rgba(62,123,184,1) 51%,rgba(58,118,178,1) 100%)
		border-color blue_dark

		&:after
			content ""
			display block
			position absolute
			top 1em
			right 7px
			cursor pointer
			sprite($arrow-right-white, 'arrow-right-white')

	&_tag_div
		padding 0

	&__link
		display block
		height 100%
		width 100%
		padding-top .765em
		padding-bottom .765em
		padding-left 12px
		font-family font-helvetica
		font-size 12px
		text-decoration none

		&_theme_blue
			color blue_button

		&:after
			content ""
			display block
			position absolute
			top 1em
			right 7px
			cursor pointer
			sprite($arrow-right, 'arrow-right')

		&_theme_white
			color white
			border-color blue_light
			&:after
				sprite($arrow-right-white, 'arrow-right-white')



