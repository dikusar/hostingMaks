.button
	position relative
	width 163px
	height 32px
	border 1px solid grey_border_button
	border-radius 3px

	&_theme_silver
		background-image url('data:image/svg+xml;base64,')
		background-image linear-gradient(to right,  rgba(232,232,232,1) 0%,rgba(255,255,255,1) 36%,rgba(237,237,237,1) 100%)
		radialGradientByPseudo(2%, 2px, 56%, -2px, -2px)

	&__link
		display block
		height 100%
		width 100%
		padding-top .765em
		padding-bottom .765em
		padding-left 12px
		font-family font-helvetica
		font-size 12px
		text-decoration none

		&_theme_blue
			color blue_button

		&:after
			content ""
			display block
			position absolute
			top 1em
			right 7px
			cursor pointer
			sprite($arrow-right, 'arrow-right')

